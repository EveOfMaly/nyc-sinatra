<h2>Edit Historical Landmark</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <lable>Edit the Name:</lable><br>
    <input type="text" name="figure[name]" id="figure_name">
    <br>
    <h4>Select an existing title or create a new one below</h4>
    <h3>Existing Tities</h3>
    <br>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"> <%= 'checked' if @figure.titles.include?(title) %> <%= title.name %> </input><br>
    <% end %>

    
    <br>

   <b><lable>Create New Title:</lable></b><br>
    <input type="text" name="new_title[name]" id="new_title">
    <br>
    <h4>Landmarks</h4>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"
        <%= 'checked' if @figure.landmarks.include?(landmark) %>> <%= landmark.name %></input><br>
    <% end %>
    <br>




    <b><lable>Create New Landmark:</lable></b><br>
    <lable>Landmark Name</lable>
    <input type="text" name="landmark[name]" id="new_landmark">
    <lable>Year Completed</lable>
    <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
    <br>
    <br>
    <input type="submit" value="Create New Figure">

</form>
<br>
<br>

<a class="button" href="/landmarks">Landmarks</a>
