<h2>Edit Historical Landmark</h2>

<form action='/landmarks/<%=@original_landmark.id %>' method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <lable>Name:</lable><br>
    <input type="text" id="name" name="landmark[name]" value="<%= @original_landmark.name %>">
    <br>
    <lable>Year Completed:</lable><br>
    <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @original_landmark.year_completed.to_s %>">
    <br><button type="submit"> Edit Landmark </button>
</form>

<a class="button" href="/landmarks">Landmarks</a>
